{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@elewa/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@elewa/backend/auth": ["libs/backend/auth/src/index.ts"],
      "@elewa/backend/core": ["libs/backend/core/src/index.ts"],
      "@elewa/backend/entities": ["libs/backend/entities/src/index.ts"],
      "@elewa/backend/typeorm": ["libs/backend/typeorm/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
